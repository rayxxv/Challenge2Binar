<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/hijau_tokped"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <SearchView
            android:id="@+id/view_search_bar"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_margin="16dp"
            android:background="@drawable/search"
            android:iconifiedByDefault="false"
            android:queryHint="@string/search"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/constraint1"
            app:layout_constraintStart_toStartOf="@id/constraint1"
            app:layout_constraintTop_toTopOf="@id/constraint1"
            app:layout_constraintEnd_toStartOf="@id/inbox"/>

        <ImageButton
            android:id="@+id/inbox"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/transparant"
            android:src="@drawable/ic_inbox"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/view_search_bar"
            app:layout_constraintStart_toEndOf="@+id/view_search_bar"
            app:layout_constraintTop_toTopOf="@+id/view_search_bar"
            app:layout_constraintEnd_toStartOf="@+id/notif"
            />

        <ImageButton
            android:id="@+id/notif"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/transparant"
            android:src="@drawable/ic_notif"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/inbox"
            app:layout_constraintStart_toEndOf="@+id/inbox"
            app:layout_constraintTop_toTopOf="@+id/inbox"
            app:layout_constraintEnd_toStartOf="@id/troli"
            />

        <ImageButton
            android:id="@+id/troli"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/transparant"
            android:src="@drawable/ic_troli"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@id/notif"
            app:layout_constraintStart_toEndOf="@id/notif"
            app:layout_constraintTop_toTopOf="@id/notif"
            app:layout_constraintEnd_toStartOf="@id/mini_menu" />

        <ImageButton
            android:id="@+id/mini_menu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/transparant"
            android:src="@drawable/ic_mini_menu"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@id/troli"
            app:layout_constraintStart_toEndOf="@id/troli"
            app:layout_constraintTop_toTopOf="@id/troli"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scroll2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraint1"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint2"
            android:layout_width="wrap_content"
            android:layout_height="64dp">

            <View
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="@drawable/lengkung_ijo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageButton
                android:id="@+id/location"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="16dp"
                android:background="@color/transparant"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_location"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/text_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:layout_marginStart="4dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/location"
                app:layout_constraintStart_toEndOf="@id/location"
                app:layout_constraintTop_toTopOf="parent" />
            <ImageButton
                android:id="@+id/id_kirim"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:background="@color/transparant"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_kirim"
                app:layout_constraintStart_toEndOf="@id/text_location"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_gopay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:background="@drawable/rounded_akses"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/location">

                <ImageButton
                    android:id="@+id/gopay"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="10dp"
                    android:background="@color/transparant"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_wallet"
                    app:tint="@color/biru_gopay"
                    app:layout_constraintBottom_toBottomOf="@id/constraint_gopay"
                    app:layout_constraintEnd_toStartOf="@id/saldo"
                    app:layout_constraintStart_toStartOf="@id/constraint_gopay"
                    app:layout_constraintTop_toTopOf="@id/constraint_gopay"/>

                <TextView
                    android:id="@+id/saldo"
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/saldo"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@id/gopay"
                    app:layout_constraintStart_toEndOf="@id/gopay"
                    app:layout_constraintTop_toTopOf="@id/gopay" />

                <TextView
                    android:id="@+id/coin"
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:text="@string/coin"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/gopay"
                    app:layout_constraintStart_toStartOf="@id/saldo"
                    app:layout_constraintTop_toBottomOf="@id/saldo" />

                <ImageButton
                    android:id="@+id/member"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="10dp"
                    android:background="@color/transparant"
                    android:scaleType="fitCenter"
                    android:src="@drawable/member"
                    app:layout_constraintStart_toEndOf="@+id/saldo"
                    tools:layout_editor_absoluteY="10dp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/status_member"
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/member_silver"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/member"
                    app:layout_constraintTop_toTopOf="@id/member" />

                <TextView
                    android:id="@+id/kupon_member"
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"

                    android:text="@string/Kupon"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/member"
                    app:layout_constraintStart_toStartOf="@id/status_member"
                    app:layout_constraintTop_toBottomOf="@id/status_member" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <HorizontalScrollView
                android:id="@+id/banner_menu_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/constraint_gopay">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/list_menu_baris_satu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                   

                    <ImageButton
                        android:id="@+id/official_store"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="20dp"
                        android:scaleType="fitCenter"
                        android:background="@color/transparant"
                        android:src="@drawable/official_store"
                        app:layout_constraintEnd_toStartOf="@id/lihat_semua"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/text_official_store"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/official_store"
                        android:textSize="8sp"
                        app:layout_constraintEnd_toEndOf="@id/official_store"
                        app:layout_constraintStart_toStartOf="@id/official_store"
                        app:layout_constraintTop_toBottomOf="@id/official_store" />

                    <ImageButton
                        android:id="@+id/lihat_semua"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="20dp"
                        android:background="@color/transparant"
                        android:scaleType="fitCenter"
                        android:src="@drawable/lihat_semua"
                        app:layout_constraintEnd_toStartOf="@id/kebutuhan_harian"
                        app:layout_constraintStart_toEndOf="@id/official_store"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/text_lihat_semua"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lihat_semua"
                        android:textSize="8sp"
                        app:layout_constraintEnd_toEndOf="@id/lihat_semua"
                        app:layout_constraintStart_toStartOf="@id/lihat_semua"
                        app:layout_constraintTop_toBottomOf="@id/lihat_semua" />


                    <ImageButton
                        android:id="@+id/kebutuhan_harian"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="20dp"
                        android:background="@color/transparant"
                        android:scaleType="fitCenter"
                        android:src="@drawable/kebutuhan_harian"
                        app:layout_constraintEnd_toStartOf="@id/eletronik"
                        app:layout_constraintStart_toEndOf="@id/lihat_semua"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/text_kebutuhan_harian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/kebutuhan_harian"
                        android:textSize="8sp"
                        app:layout_constraintEnd_toEndOf="@id/kebutuhan_harian"
                        app:layout_constraintStart_toStartOf="@id/kebutuhan_harian"
                        app:layout_constraintTop_toBottomOf="@id/kebutuhan_harian" />

                    <ImageButton
                        android:id="@+id/eletronik"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="20dp"
                        android:background="@color/transparant"
                        android:scaleType="fitCenter"
                        android:src="@drawable/elektronik"
                        app:layout_constraintEnd_toStartOf="@id/top_up"
                        app:layout_constraintStart_toEndOf="@id/kebutuhan_harian"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/text_elektonik"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/elektronik"
                        android:textSize="8sp"
                        app:layout_constraintEnd_toEndOf="@id/eletronik"
                        app:layout_constraintStart_toStartOf="@id/eletronik"
                        app:layout_constraintTop_toBottomOf="@id/eletronik" />

                    <ImageButton
                        android:id="@+id/top_up"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@color/transparant"
                        android:scaleType="fitCenter"
                        android:src="@drawable/topup"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/eletronik"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/text_top_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/top_up_tagihan"
                        android:textSize="8sp"

                        app:layout_constraintEnd_toEndOf="@id/top_up"
                        app:layout_constraintStart_toStartOf="@id/top_up"
                        app:layout_constraintTop_toBottomOf="@id/top_up" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </HorizontalScrollView>



            <HorizontalScrollView
                android:id="@+id/banner_iklan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/banner_menu_1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/iklan1"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginStart="14dp"
                        android:adjustViewBounds="true"
                        android:background="@color/transparant"
                        android:scaleType="fitStart"
                        android:src="@drawable/iklan_1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/iklan2"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="20dp"
                        android:adjustViewBounds="true"
                        android:background="@color/transparant"
                        android:scaleType="fitStart"
                        android:src="@drawable/iklan_2"
                        app:layout_constraintStart_toEndOf="@id/iklan1"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </HorizontalScrollView>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_bintang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/rounded_xp"
                app:layout_constraintTop_toBottomOf="@+id/banner_iklan"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="16dp">

                <ImageButton
                    android:id="@+id/bintang_xp"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:background="@drawable/go_club_bg"
                    android:contentDescription="TODO"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck">

                </ImageButton>

                <ImageView
                    android:id="@+id/bintang"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/goclub"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/progress_xp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ImageContrastCheck" />

                <ProgressBar
                    android:id="@+id/progress_xp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:progress="80"
                    app:indicatorColor="@color/hijau_gojek"
                    app:layout_constraintBottom_toTopOf="@id/text_xp"
                    app:layout_constraintEnd_toStartOf="@id/arrow_right"
                    app:layout_constraintStart_toEndOf="@id/bintang"
                    app:layout_constraintTop_toBottomOf="@id/harta_hilang" />

                <TextView
                    android:id="@+id/text_xp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_xp"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@id/progress_xp"
                    app:layout_constraintStart_toStartOf="@id/progress_xp"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/time_progress"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/time_progress"
                    app:layout_constraintBottom_toBottomOf="@+id/harta_hilang"
                    app:layout_constraintEnd_toStartOf="@id/harta_hilang"
                    app:layout_constraintStart_toStartOf="@+id/progress_xp"
                    app:layout_constraintTop_toTopOf="@id/harta_hilang"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/harta_hilang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/harta_hilang"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/time_progress"
                    app:layout_constraintTop_toBottomOf="@id/progress_xp" />

                <ImageButton
                    android:id="@+id/arrow_right"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="12dp"
                    android:backgroundTint="@android:color/transparent"
                    android:src="@drawable/arrow_right"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                    android:contentDescription="TODO" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/akses_cepat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/akses"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.003"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/constraint_bintang" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_menu_akses_cepat"
                android:layout_width="0dp"
                android:layout_height="84dp"
                android:layout_margin="16dp"
                android:background="@drawable/rounded_akses"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/constraint_bintang">

                <ImageView
                    android:id="@+id/image_diskon_akses_cepat"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/voucher"
                    app:layout_constraintBottom_toTopOf="@id/line_promo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:contentDescription="TODO" />

                <TextView
                    android:id="@+id/text_diskon_akses_cepat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/voucher"
                    app:layout_constraintBottom_toBottomOf="@+id/image_diskon_akses_cepat"
                    app:layout_constraintStart_toEndOf="@id/image_diskon_akses_cepat"
                    app:layout_constraintTop_toTopOf="@+id/image_diskon_akses_cepat" />

                <ImageButton
                    android:id="@+id/arrow_foward"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="18dp"
                    android:backgroundTint="@android:color/transparent"
                    android:src="@drawable/arrow_forward"
                    app:layout_constraintBottom_toBottomOf="@id/line_promo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                    android:contentDescription="TODO" />

                <View
                    android:id="@+id/line_promo"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_promo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/restoran"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/gofoodflat"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/line_promo"
                    android:contentDescription="TODO" />

                <TextView
                    android:id="@+id/text_restoran_akses_cepat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/restoran"
                    app:layout_constraintBottom_toBottomOf="@+id/restoran"
                    app:layout_constraintStart_toEndOf="@id/restoran"
                    app:layout_constraintTop_toTopOf="@+id/restoran" />

                <ImageButton
                    android:id="@+id/button_panah_akses_cepat_restoran"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="18dp"
                    android:backgroundTint="@android:color/transparent"
                    android:src="@drawable/arrow_forward"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/line_promo"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
                    android:contentDescription="TODO" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_iklan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/rounded_akses"
                app:layout_constraintEnd_toEndOf="@id/constraint_menu_akses_cepat"
                app:layout_constraintStart_toStartOf="@id/constraint_menu_akses_cepat"
                app:layout_constraintTop_toBottomOf="@id/constraint_menu_akses_cepat"
                app:layout_constraintBottom_toTopOf="@id/guideline_navbar"
                tools:ignore="NotSibling">

                <ImageView
                    android:id="@+id/iklan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/banner_gopay"
                    app:layout_constraintBottom_toTopOf="@id/text_iklan"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_iklan"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="16dp"
                    android:text="@string/iklan"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iklan" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:id="@+id/space_iklan"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                app:layout_constraintBottom_toTopOf="@id/guideline_navbar"
                app:layout_constraintTop_toBottomOf="@id/constraint_iklan"
                tools:ignore="NotSibling" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_navbar"
        android:layout_width="0dp"
